@using Tamagotchi.Models;
@using System.Collections.Generic;

<h1>Tamagotchi World</h1>

@* list of all tamagotchis and stats *@
<h3>Tamagotchis</h3>
@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
  @foreach (Pet pet in Model)
  {
    <li><a href='/pet/@pet.Id'>@pet.Name</a></li>
    <li><form action="pets/@ped.Id">
      <button type="submit" name=""></button>
    </form></li>
    <li><form action="pets/@ped.Id">
      <button></button>
    </form></li>
    <li><form action="pets/@ped.Id">
      <button></button>
    </form></li>
    <li><a href='/pet/@pet.Id'>@pet.Name</a></li>
    <li><a href='/pet/@pet.Id'>@pet.Food</a></li>
    <li><a href='/pet/@pet.Id'>@pet.Sleep</a></li>
    <li><a href='/pet/@pet.Id'>@pet.Attention</a></li>
  }
</ul>



@* buttons/links with actions *@
<a href="/pets/new">Make a new Tamagotchi!</a>
<form action="/pets/delete" method="post">
  <button type="submit" name="button">Remove all Pets</button>
</form>